
@{
    Layout = null;
    var db = new DataLayer.KuroshDB();
    var set = db.SettingRepository.Get().SingleOrDefault();
    var cats = db.CategoryRepository.Get();

}

<!Doctype html>
<html class="no-js" lang="zxx">

