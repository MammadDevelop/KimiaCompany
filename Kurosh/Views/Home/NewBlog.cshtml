@model List<DomainClass.Blog>

<!-- blog area start -->
<section class="blog-area pt-140 pb-110">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-6 col-lg-8 col-md-10">
                <div class="testimonial-section-area text-center">
                    <div class="section-area mb-55 section-area-top">
                        <span class="section-subtitle">وبلاگ ها</span>
                        <h2 class="section-title mb-20">آخرین مقالات ما</h2>
                        <p class="section-text">
                            در این بخش آخرین مقالات مارا تماشا میکنید
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-8 col-lg-8">
                <div class="blog-wrap">
                    <div class="blog-item blog-item-h mb-30">
                        <div class="blog-img" style="max-block-size:174px">
                            <a href="@Url.Action("Blog", "Home", new { Id = Model[0].Id, Name = Model[0].Title })"><img src="~/Areas/assets/ImageBlogs/@Model[0].Image" alt="@Model[0].Title - کوروش"></a>
                        </div>
                        <div class="blog-content">
                            <div class="blog-content-meta">
                                <span><i class="fa-thin fa-user"></i>@Model[0].Publisher.FullName</span>
                                <span><i class="fa-thin fa-clock"></i>@Utility.GeneralUtility.toLongShamsiDate(Model[0].ReleaseDate)</span>
                            </div>
                            <h5 class="blog-content-title"><a href="@Url.Action("Blog", "Home", new { Id = Model[0].Id, Name = Model[0].Title })">@Model[1].Title</a></h5>
                            <a href="@Url.Action("Blog", "Home", new { Id = Model[0].Id, Name = Model[0].Title })" class="theme-btn blog-btn t-theme-btn">ادامه مطلب</a>
                        </div>
                    </div>
                    <div class="blog-item blog-item-h mb-30">
                        <div class="blog-img" style="max-block-size:174px">
                            <a href="@Url.Action("Blog", "Home", new { Id = Model[1].Id, Name = Model[1].Title })"><img src="~/Areas/assets/ImageBlogs/@Model[1].Image" alt="@Model[1].Title - کوروش"></a>
                        </div>
                        <div class="blog-content">
                            <div class="blog-content-meta">
                                <span><i class="fa-thin fa-user"></i>@Model[1].Publisher.FullName</span>
                                <span><i class="fa-thin fa-clock"></i>@Utility.GeneralUtility.toLongShamsiDate(Model[1].ReleaseDate)</span>
                            </div>
                            <h5 class="blog-content-title"><a href="@Url.Action("Blog", "Home", new { Id = Model[1].Id, Name = Model[1].Title })">@Model[1].Title</a></h5>
                            <a href="@Url.Action("Blog", "Home", new { Id = Model[1].Id, Name = Model[1].Title })" class="theme-btn blog-btn t-theme-btn">ادامه مطلب</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-4 col-lg-4">
                <div class="blog-item blog-item-v mb-30">
                    <div class="blog-img" style="max-block-size:174px">
                        <a href="@Url.Action("Blog", "Home", new { Id = Model[2].Id, Name = Model[2].Title })"><img src="~/Areas/assets/ImageBlogs/@Model[2].Image" alt="@Model[2].Title - آموزشگاه کوروش"></a>
                    </div>
                    <div class="blog-content">
                        <div class="blog-content-meta">
                            <span><i class="fa-thin fa-user"></i>@Model[2].Publisher.FullName</span>
                            <span><i class="fa-thin fa-clock"></i>@Utility.GeneralUtility.toLongShamsiDate(Model[2].ReleaseDate)</span>
                        </div>
                        <h5 class="blog-content-title"><a href="@Url.Action("Blog", "Home", new { Id = Model[2].Id, Name = Model[2].Title })">@Model[2].Title</a></h5>
                        <a href="@Url.Action("Blog", "Home", new { Id = Model[2].Id, Name = Model[2].Title })" class="theme-btn blog-btn t-theme-btn">ادامه مطلب</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- blog area end -->
