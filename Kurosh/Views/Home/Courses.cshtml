@model IEnumerable<DomainClass.Coures>

@{
    ViewBag.Title = " - دوره ها";
    Layout = "~/Views/Shared/Home_Layout.cshtml";
    var Count = Int32.Parse(ViewBag.Count.ToString());
    var Page = Int32.Parse(ViewBag.Page.ToString());
}

<main>
    <!-- بنر بالای سایت شروع-->
    <section class="breadcrumb-area bg-default" data-background="../../assets/img/breadcrumb/breadcrumb-bg.jpg">
        <img src="../../assets/img/breadcrumb/shape-1.png" alt="" class="breadcrumb-shape">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="breadcrumb-content">
                        <h2 class="breadcrumb-title">دوره ها</h2>
                        <div class="breadcrumb-list">
                            <a href="@Url.Action("Index","Home")">صفحه اصلی</a>
                            <span>دوره ها</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- بنر بالای سایت پایان-->
    <!-- بخش دوره ها شروع-->
    <section class="innerPage_course-area pt-120 pb-90">
        <div class="container">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-xl-4 col-lg-6 col-md-6">
                        <div class="h2_course-item mb-30">
                            <div class="h2_course-item-img">
                                <a href="@Url.Action("Course","Home",new { Id=item.Id,Name=item.Name })"><img style="min-height:200px;max-height:200px" src="~/Areas/assets/CoursesImage/@item.Image" alt="@item.Name (@item.Teacher.User.FullName) | آموزشگاه فنی و حرفه ای کوروش"></a>
                            </div>
                            <div class="h2_course-content">
                                <div class="h2_course-content-top">
                                    <div class="h2_course-rating">
                                        <ul>
                                            <li><i class="fa-solid fa-star"></i></li>
                                            <li><i class="fa-solid fa-star"></i></li>
                                            <li><i class="fa-solid fa-star"></i></li>
                                            <li><i class="fa-solid fa-star"></i></li>
                                            <li><i class="fa-solid fa-star"></i></li>
                                        </ul>

                                    </div>
                                    <div class="h2_course-save">
                                        <span>(@item.Seen بازدید)</span>
                                    </div>
                                </div>
                                <h5 class="h2_course-content-title"><a href="@Url.Action("Course","Home",new { Id=item.Id,Name=item.Name })">@item.Name</a></h5>
                                <div class="h2_course-content-info">
                                    <span><i class="fa-thin fa-book-blank"></i>@item.HoursCout ساعت</span>
                                    <span><i class="fa-thin fa-user-group"></i>@item.Students.Count دانش آموز</span>
                                </div>
                                <p class="h2_course-content-text">
                                    @item.Summery
                                </p>
                                <div class="h2_course-content-author">
                                    <div class="h2_course-author-img">
                                        <img src="~/Areas/assets/ImageProfileUser/@item.Teacher.User.Image" alt="@item.Teacher.User.FullName" style="border-radius:100%">
                                    </div>
                                    <div class="h2_course-author-info">
                                        <span>مدرس <a href="#">@item.Teacher.User.FullName</a></span>
                                    </div>
                                </div>
                            </div>
                            <div class="h2_course-content-bottom" style="display:ruby-text">
                                <div class="h2_course-bottom-price">
                                    <span><del>@Utility.GeneralUtility.ToToman(item.OldPrice)</del>@Utility.GeneralUtility.ToToman(item.Price)</span>
                                </div>
                            </div>

                            <div class="header-btn d-none d-sm-block mb-3" style="text-align:center;">
                                <a href="@Url.Action("Course","Home",new { Id=item.Id,Name=item.Name })" class="header-btn theme-btn theme-btn-medium">مشاهده دوره</a>

                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="pagination-area mt-20 mb-30">
                        <ul>
                            @for (int i = 0; i <= Count; i++)
                            {
                                if (i == Page)
                                {
                                    <li><a class="bg-primary disabled text-white">@(i+1)</a></li>
                                }
                                else
                                {
                                    <li><a href="@Url.Action("Courses", "Home", new {Page= i})">@(i+1)</a></li>
                                }
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- بخش دوره ها پایان-->
    <!-- بنر پایین شروع-->
    <div class="cta-area">
        <div class="container">
            <div class="cta-wrapper">
                <div class="row align-items-center">
                    <div class="col-xl-6 col-lg-6">
                        <div class="cta-content mb-30 mb-lg-0">
                            <span class="cta-subtitle">دانلود برنامه</span>
                            <h2 class="cta-title">
                                آیا برای شروع کار خود آماده اید
                                دوره آنلاین؟
                            </h2>
                        </div>
                    </div>
                    <div class="col-xl-6 col-lg-6">
                        <div class="cta-button">
                            <a href="#" class="cta-btn"><i class="fa-brands fa-apple"></i>فروشگاه اپل</a>
                            <a href="#" class="cta-btn"><i class="fa-brands fa-google-play"></i>فروشگاه Play</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- بنر پایین پایان-->
</main>