@model DomainClass.FAQ

@{
    ViewBag.Title = "faq";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}


<div class="main-content app-content">

    <!-- container -->
    <div class="main-container container-fluid">


        <!-- breadcrumb -->
        <div class="breadcrumb-header justify-content-between">
            <div>
                <h4 class="content-title mb-2 mb-xl-0">سوال متداول</h4>
            </div>
            <div class="d-flex my-auto">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index","Dashboard","Admin");">صفحه اصلی</a></li>
                        <li class="breadcrumb-item active " aria-current="page">سوال متداول</li>
                    </ol>
                </nav>
            </div>
        </div>
        <!-- /breadcrumb -->
        <!-- row -->
        <div class="row row-sm">
            <!-- Col -->
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-2 mb-4 main-content-label ">
                                <b>
                                    افزودن سوال
                                </b>
                            </div>
                            <div class="col-md-10 mb-4 main-content-label text-warning ">لطفا در مطرح کردن سوالات دقت فرمایید🙏</div>
                            <div class="col-md-2"></div>
                            <div class="col-md-10 mb-4 main-content-label text-danger ">در الویت بندی سوالات دقت نمائید ⚠️</div>
                        </div>


                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                <div class="form-group ">
                                    <div class="row">
                                        <div class="col-md-2">
                                            @Html.LabelFor(model => model.Question, htmlAttributes: new { @class = "form-label" })
                                        </div>
                                        <div class="col-md-10">

                                            @Html.EditorFor(model => model.Question, new { htmlAttributes = new { @class = "form-control", placeholder = "سوال" } })
                                            @Html.ValidationMessageFor(model => model.Question, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group ">
                                    <div class="row">
                                        <div class="col-md-2">
                                            @Html.LabelFor(model => model.Answer, htmlAttributes: new { @class = "form-label" })
                                        </div>
                                        <div class="col-md-10">

                                            @Html.EditorFor(model => model.Answer, new { htmlAttributes = new { @class = "form-control", placeholder = "جواب" } })
                                            @Html.ValidationMessageFor(model => model.Answer, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group ">
                                    <div class="row">
                                        <div class="col-md-2">
                                            @Html.LabelFor(model => model.Level, htmlAttributes: new { @class = "form-label" })
                                        </div>
                                        <div class="col-md-10">

                                            @Html.EditorFor(model => model.Level, new { htmlAttributes = new { @class = "form-control", placeholder = "الویت" } })
                                            @Html.ValidationMessageFor(model => model.Level, "", new { @class = "text-danger" })
                                            @Html.HiddenFor(m => m.Id)
                                        </div>
                                    </div>
                                </div>





                                <div class="row card-footer">
                                    <div>
                                        <input type="submit" value="ثبت" class="btn btn-primary " />
                                    </div>
                                    <div>
                                        <a class="btn btn-danger" href="@Url.Action("FAQs/","Dashboard")">
                                            بازگشت
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                </div>
            </div>
            <!-- /Col -->
        </div>
        <!-- row closed -->


    </div>
    <!-- Container closed -->
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
