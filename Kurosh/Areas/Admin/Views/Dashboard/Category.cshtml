@model DomainClass.Category

@{
    ViewBag.Title = "Category";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}


<div class="main-content app-content">

    <!-- container -->
    <div class="main-container container-fluid">
        <!-- breadcrumb -->
        <div class="breadcrumb-header justify-content-between">
            <div>
                <h4 class="content-title mb-2 mb-xl-0">افزودن دسته بندی</h4>
            </div>
            <div class="d-flex my-auto">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index","Dashboard","Admin");">صفحه اصلی</a></li>
                        <li class="breadcrumb-item active " aria-current="page">افزودن دسته بندی</li>
                    </ol>
                </nav>
            </div>
        </div>
        <!-- /breadcrumb -->
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">افزودن دسته بندی</div>
                        <p class="mb-0 text-muted tx-13">در این فرم میتوانید دسته بندی دلخواه خود را اضافه کنید 💕</p>
                    </div>
                    <div class="card-body">

                        @using (Html.BeginForm("Category", "Dashboard", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="pd-30 pd-sm-40 bg-gray-100">
                                <div class="row row-xs">

                                    <div class="col-md-5">
                                        @Html.LabelFor(model => model.image, htmlAttributes: new { @class = "form-label text-dark" })
                                    </div>
                                    <div class="col-md-12 mg-t-10 mg-md-t-0">

                                        <div>
                                            <input class="form-control" type="file" id="FileUpload" name="FileUpload">
                                            @Html.ValidationMessageFor(model => model.image, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    @Html.HiddenFor(m => m.Id)
                                    @Html.HiddenFor(m => m.image)
                                    <div class="col-md-5">
                                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "form-label text-dark" })
                                    </div>
                                    <div class="col-md-8 mg-t-10 mg-md-t-0">


                                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "نام دسته بندی را وارد کنید" } })
                                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="col-4 col-md mg-t-10 mg-md-t-0">
                                        <button type="submit" class="btn btn-primary btn-block">افزودن</button>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
