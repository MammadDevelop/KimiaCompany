@model DomainClass.Message

@{
    ViewBag.Title = "Message";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}

<div class="main-content app-content">
    <div class="main-container container-fluid">
        <div class="row row-sm">
            <div class="col-lg-12 col-xl-12 col-md-12 mt-3">
                <div class="card">
                    <div class="card-header border-bottom">
                        <h3 class="card-title mb-0">مشاهده پیام</h3>
                    </div>
                    <div class="card-body">
                        <div class="email-media">
                            <div class="mt-0 d-sm-flex">
                                
                                <div class="media-body d-md-flex">
                                    <div>
                                        <div class="media-title text-dark font-weight-semiblod mt-3">
                                            <h4>@Model.FullName</h4>
                                            <p class="text-muted">پست الکترونیکی : (@Model.Email )</p>
                                            <p class="mb-0 tx-12">شماره تماس : (@Model.PhoneNumber) </p>
                                            <p class="mb-0 tx-12">آیپی آدرس : (@Model.IpAddress) </p>
                                        </div>
                                    </div>
                                    <div class="ms-auto mt-md-4">
                                        <small class="me-2 tx-13 mt-1"> @Utility.GeneralUtility.toLongShamsiDate(Model.ReleaseDate)  //   @Model.ReleaseDate.ToLongTimeString()  </small>


                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="eamil-body mt-4">
                            <h6>@Model.Subject</h6>
                            <p>@Model.Text</p>
                            <hr>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
