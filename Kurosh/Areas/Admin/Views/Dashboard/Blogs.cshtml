@model IEnumerable<DomainClass.Blog>

@{
    ViewBag.Title = "Blogs";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}

<!-- main-content -->
<div class="main-content app-content">

    <!-- container -->
    <div class="main-container container-fluid">


        <!-- breadcrumb -->
        <div class="breadcrumb-header justify-content-between">
            <div>
                <h4 class="content-title mb-2 mb-xl-0">مقالات</h4>
            </div>
            <div class="d-flex my-auto">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index","Dashboard","Admin");">صفحه اصلی</a></li>
                        <li class="breadcrumb-item active " aria-current="page">مقالات</li>
                    </ol>
                </nav>
            </div>
        </div>
        <!-- /breadcrumb -->
        <!-- row opened -->
        <div class="row row-sm">
            <!--/div-->
            <!--div-->
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-header pb-0">
                        <div class="d-flex justify-content-between">
                            <h4 class="card-title mg-b-2 mt-2">مقالات</h4>
                            <i class="mdi mdi-dots-horizontal text-gray"></i>
                        </div>
                        <p class="col-11 tx-12 text-muted mb-2">تمامی مقالات سایت در این لیست قابل مشاهده هستند💕</p>
                    </div>
                    <div class="main-contact-action btn-list pt-3 pe-3" style="top:0">
                        <a href="@Url.Action("blog", "Dashboard")" class="btn ripple btn-primary text-white btn-icon ms-1  rounded-5" data-bs-placement="top" data-bs-toggle="tooltip" title="افزودن دسته بندی">
                            <i class=" bi bi-plus-lg"></i>
                        </a>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover mg-b-1 text-md-nowrap">
                                <thead>
                                    <tr>
                                        <th>شناسه</th>
                                        <th>تصویر </th>
                                        <th>عنوان </th>
                                        <th>تاریخ انتشار </th>
                                        <th>انتشار دهنده</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {

                                        <tr style="">
                                            <th scope="row">@item.Id</th>
                                            <th>
                                                <img src="~/Areas/assets/ImageBlogs/@item.Image" style="width:100px" />
                                            </th>
                                            <th>@item.Title</th>
                                            <th>@Utility.GeneralUtility.toLongShamsiDate(item.ReleaseDate)</th>
                                            <th>@item.Publisher.FullName</th>
                                            <td style="text-align:left">
                                                <a href="@Url.Action("blog/" + item.Id, "Dashboard")" class="btn btn-primary bi bi-pencil-square" data-bs-placement="top" data-bs-toggle="tooltip" title="ویرایش"> </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div><!-- bd -->
                    </div><!-- bd -->
                </div><!-- bd -->
            </div>
            <!--/div-->
            <!--/div-->
        </div>
        <!-- /row -->


    </div>
    <!-- Container closed -->
</div>
<!-- main-content closed -->
